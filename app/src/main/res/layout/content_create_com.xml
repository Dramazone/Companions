<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.companions.CreateComActivity"
    tools:showIn="@layout/activity_create_com"
    android:background="@color/colorSoftLight">

    <LinearLayout
        android:id="@+id/setup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setup_companion_1"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">

            </LinearLayout>

            <TextView
                android:id="@+id/setup_devider_line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccentHart"/>
            <TextView
                android:id="@+id/setup_devider_1"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/shadow_devider"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setup_companion_2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left"
>

            </LinearLayout>

            <TextView
                android:id="@+id/setup_devider_line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccentHart"/>
            <TextView
                android:id="@+id/setup_devider_2"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/shadow_devider"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setup_companion_3"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">

            </LinearLayout>

            <TextView
                android:id="@+id/setup_devider_line_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccentHart"/>
            <TextView
                android:id="@+id/setup_devider_3"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/shadow_devider"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/setup_companion_4"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">

            </LinearLayout>

            <TextView
                android:id="@+id/setup_devider_line_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccentHart"/>
            <TextView
                android:id="@+id/setup_devider_4"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/shadow_devider"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/setup_layout_done"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center|left"
            android:background="@color/colorWhite"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/setup_done_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_quest"
                android:padding="2dp" />
            <TextView
                android:id="@+id/setup_done_text"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Ready" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right|center">


                <ImageView
                    android:padding="8dp"
                    android:src="@drawable/icon_next_play"
                    android:layout_gravity="right|center"
                    android:id="@+id/button_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/line_done"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8e8e8e"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/devider_done"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/shadow_devider"
            android:visibility="invisible"/>
    </LinearLayout>



</ScrollView>
