<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.companion.SetupActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/shadow_devider"/>

    <LinearLayout
        android:id="@+id/layout_setup"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/setup_layout_datasheet"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">
                <ImageView
                    android:id="@+id/setup_icon_datasheet"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_data"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/setup_text_datasheet"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Companion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right|center">
                    <ImageView
                        android:id="@+id/showGender"
                        android:layout_gravity="right|center"
                        android:layout_marginLeft="12dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp" />
                    <ImageView
                        android:id="@+id/showFace"
                        android:layout_gravity="right|center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="38dp"
                        android:layout_height="38dp" />
                    <ImageView
                        android:padding="8dp"
                        android:src="@drawable/icon_save"
                        android:layout_gravity="right|center"
                        android:id="@+id/button_companion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/setup_devider_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8e8e8e"/>
            <TextView
                android:id="@+id/setup_devider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shadow_devider" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/setup_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:id="@+id/setup_layout_name"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">
                <ImageView
                    android:id="@+id/setup_icon_name"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_edit"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/setup_text_name"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Name:" />
                <EditText
                    android:id="@+id/setup_edit_name"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorAccentHart" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="74dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e1e1e1"/>
        </LinearLayout>






        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:id="@+id/setup_layout_gender"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">
                <ImageView
                    android:id="@+id/setup_icon_gender"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_puzzle"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/setup_text_gender"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Gender:" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/setup_gender_girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Girl"
                        android:textColor="@color/colorAccentHart"/>
                    <RadioButton
                        android:id="@+id/setup_gender_boy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Boy"
                        android:textColor="@color/colorAccentHart"/>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="74dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e1e1e1"/>
        </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:id="@+id/setup_layout_look"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center|left">
                <ImageView
                    android:id="@+id/setup_icon_look"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_face_2"
                    android:padding="2dp" />
                <TextView
                    android:id="@+id/setup_text_look"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Look:" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/face00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_monkey"/>
                    <ImageView
                        android:id="@+id/face01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_bird"/>
                    <ImageView
                        android:id="@+id/face02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_pinguin"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/face03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_hippo"/>
                    <ImageView
                        android:id="@+id/face04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_owl"/>
                    <ImageView
                        android:id="@+id/face05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_lion"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/face06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/image_kids_horse"/>
                    <ImageView
                        android:id="@+id/face07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_dog"/>
                    <ImageView
                        android:id="@+id/face08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_cow"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/face09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_elephant"/>
                    <ImageView
                        android:id="@+id/face10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_bear"/>
                    <ImageView
                        android:id="@+id/face11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/image_kids_giraffe"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@drawable/shadow_devider_up" />
            </LinearLayout>
        </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
